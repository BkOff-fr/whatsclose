# WhatsClose Environment Variables
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# ================================
# Application Settings
# ================================

# Next.js Environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ================================
# API Configuration
# ================================

# API Base URL
NEXT_PUBLIC_API_URL=https://api.whatsclose.com

# API Key (if needed)
# API_KEY=your-api-key-here

# ================================
# Analytics & Monitoring
# ================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry (Error Tracking)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# ================================
# Social Media & SEO
# ================================

# Twitter/X Handle
NEXT_PUBLIC_TWITTER_HANDLE=@whatsclose

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/whatsclose
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/whatsclose
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/whatsclose

# ================================
# Feature Flags
# ================================

# Enable/disable 3D backgrounds (useful for debugging)
NEXT_PUBLIC_ENABLE_3D=true

# Enable/disable smooth scrolling
NEXT_PUBLIC_ENABLE_SMOOTH_SCROLL=true

# Enable/disable custom cursor
NEXT_PUBLIC_ENABLE_CUSTOM_CURSOR=true

# Enable/disable loading screen
NEXT_PUBLIC_ENABLE_LOADING_SCREEN=true

# ================================
# Performance & Optimization
# ================================

# Image optimization quality (1-100)
NEXT_PUBLIC_IMAGE_QUALITY=85

# 3D particle count multiplier (0.5 = half, 2 = double)
NEXT_PUBLIC_3D_PERFORMANCE_MULTIPLIER=1

# ================================
# Third-party Services
# ================================

# Mapbox (if using for globe visualization)
# NEXT_PUBLIC_MAPBOX_TOKEN=

# Mailchimp (for newsletter)
# MAILCHIMP_API_KEY=
# MAILCHIMP_LIST_ID=

# SendGrid (for contact forms)
# SENDGRID_API_KEY=

# ================================
# Database (if needed in future)
# ================================

# DATABASE_URL=postgresql://user:password@localhost:5432/whatsclose
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# ================================
# Development Tools
# ================================

# Enable React Query DevTools
# NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable Redux DevTools
# NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# Log level (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=info

# ================================
# Security
# ================================

# CORS allowed origins (comma separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://whatsclose.com

# Rate limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=60

# ================================
# Contact & Support
# ================================

# Contact email
NEXT_PUBLIC_CONTACT_EMAIL=contact@whatsclose.com

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@whatsclose.com
